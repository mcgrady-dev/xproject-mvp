<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">

    <android.support.v4.view.ViewPager
        android:id="@+id/main_splash_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.rd.PageIndicatorView
        android:id="@+id/main_splash_indicator_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        app:piv_animationType="scale"
        app:piv_dynamicCount="true"
        app:piv_interactiveAnimation="true"
        app:piv_selectedColor="@android:color/holo_blue_light"
        app:piv_unselectedColor="@android:color/darker_gray"
        app:piv_viewPager="@id/main_splash_view_pager"
        android:padding="12dp"/>

    <TextView
        android:id="@+id/main_splash_tv_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="28dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:gravity="center"
        android:background="@drawable/main_bg_btn_white_shape"
        android:textSize="15sp"
        android:textColor="@color/black_alpha30"
        android:text="立即加入"
        android:visibility="invisible"/>

</RelativeLayout>