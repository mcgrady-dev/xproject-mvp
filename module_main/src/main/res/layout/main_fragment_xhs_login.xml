<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/main_tv_down"
        android:layout_alignParentTop="true"
        android:background="@android:color/white"
        android:scrollbars="none"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal"
            android:textSize="18sp">

            <RelativeLayout
                android:id="@+id/main_rl_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:textColor="@color/public_color_363636">

                <TextView
                    android:id="@+id/main_tv_phonetitle"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/main_title_phone"
                    android:textColor="@color/public_color_363636"
                    android:textSize="18sp"/>

                <EditText
                    android:id="@+id/main_et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/main_tv_phonetitle"
                    android:background="@null"
                    android:textColor="@color/public_color_363636"
                    android:textColorHint="@color/public_color_ACACAC"
                    android:inputType="number"
                    android:singleLine="true"
                    android:maxLength="11"
                    android:hint="@string/main_input_password_hint"
                    android:textSize="18sp"/>
            </RelativeLayout>

            <View
                android:id="@+id/main_spit_view1"
                android:layout_width="fill_parent"
                android:layout_height="0.6dp"
                android:layout_below="@+id/main_rl_phone"
                android:background="#e3e3e3"/>

            <RelativeLayout
                android:id="@+id/main_rl_psw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_spit_view1"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/main_tv_pswtitle"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/main_password"
                    android:textColor="@color/public_color_363636"
                    android:textSize="18sp"/>

                <EditText
                    android:id="@+id/main_et_psw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/main_tv_forgetpsw"
                    android:layout_toRightOf="@+id/main_tv_pswtitle"
                    android:background="@null"
                    android:hint="@string/main_input_password_hint"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:maxLength="20"
                    android:textColor="@color/public_color_363636"
                    android:textColorHint="@color/public_color_ACACAC"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/main_tv_forgetpsw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/main_forget_password"
                    android:textColor="@color/public_color_67da9f"
                    android:textSize="18sp"/>
                <ImageView
                    android:id="@+id/main_btn_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/main_ic_login_confirm"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"/>
            </RelativeLayout>

            <View
                android:id="@+id/main_spit_view2"
                android:layout_width="fill_parent"
                android:layout_height="0.6dp"
                android:layout_below="@+id/main_rl_psw"
                android:background="#e3e3e3"/>

            <RelativeLayout
                android:id="@+id/main_rl_socialtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_spit_view2"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <View
                    android:id="@+id/main_spit_view3"
                    android:layout_width="60dp"
                    android:layout_height="0.6dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/main_tv_socialtitle"
                    android:background="#e3e3e3"/>

                <TextView
                    android:id="@+id/main_tv_socialtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/main_use_social_account"
                    android:textColor="@color/public_color_ACACAC"
                    android:textSize="14sp"/>

                <View
                    android:id="@+id/main_spit_view4"
                    android:layout_width="60dp"
                    android:layout_height="0.6dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/main_tv_socialtitle"
                    android:background="#e3e3e3"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_rl_socialtitle"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/main_rl_weibo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/main_iv_weibo"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/main_ic_logo_weibo"/>

                    <TextView
                        android:id="@+id/main_tv_social_title_weibo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/main_iv_weibo"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="@string/main_weibo_login"
                        android:textColor="@color/public_color_363636"
                        android:textSize="14sp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/main_rl_wechat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/main_iv_wechat"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/main_ic_logo_wechat"/>

                    <TextView
                        android:id="@+id/tv_social_title_wechat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/main_iv_wechat"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="@string/main_wechat_login"
                        android:textColor="@color/public_color_363636"
                        android:textSize="14sp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/main_rl_qq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/main_iv_qq"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/main_ic_logo_qq"/>

                    <TextView
                        android:id="@+id/main_tv_social_title_qq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/main_iv_qq"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="@string/main_qq_login"
                        android:textColor="@color/public_color_363636"
                        android:textSize="14sp"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <TextView
        android:id="@+id/main_tv_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="@string/main_download_xhs_app"
        android:gravity="center"
        android:layout_above="@+id/main_ly_sharefunc"
        android:textColor="@color/public_color_ff909090"
        android:textSize="17sp"/>


    <RelativeLayout
        android:id="@+id/main_ly_sharefunc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/main_chb_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/main_ckb_share_back"
                android:checked="true"
                android:background="@null"
                android:button="@null"
                android:layout_marginBottom="20dp"
                android:drawablePadding="0dp"
                android:text="@string/main_share_community"
                android:textColor="@color/public_color_ff909090"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/main_tv_policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="@string/main_privacy_policy"
                android:textColor="@color/public_color_ff909090"
                android:textSize="12sp"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>