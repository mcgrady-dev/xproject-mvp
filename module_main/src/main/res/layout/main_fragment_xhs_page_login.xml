<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tl="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/main_ll_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="160dp">

        <com.mcgrady.common_res.widget.SlidingTabLayout
            android:id="@+id/main_sliding_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tl:tl_indicator_style="TRIANGLE"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/main_view_pager_fragment"
            android:layout_below="@id/main_sliding_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</FrameLayout>